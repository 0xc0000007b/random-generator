{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "paths": {
      "@classes": ["./src/classes"],
      "@types": ["./src/types"],
      "@decorators": ["./src/decorators"]
    },

  }
}
