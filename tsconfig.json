{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "declaration": true,
    "allowJs": true,
    "outDir": "dist",
    "paths": {
      "@classes": ["./src/classes"],
      "@types": ["./src/types"],
      "@decorators": ["./src/decorators"],
      "@generators/*": ["./src/*"]
    }

  }
}
